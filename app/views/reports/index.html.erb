<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3 class="text-center"><%= 1.year.ago.year %> Hours</h3>
      <%= pie_chart(@totals_last_year, library: {legend: {position: 'bottom'}}) %>
    </div>
    <div class="col-md-6">
      <h3 class="text-center"><%= Date.today.year %> Hours</h3>
      <%= pie_chart(@totals_this_year, library: {legend: {position: 'bottom'}}) %>
    </div>
  </div>
</div>