<% if @tickets.any? %>
  
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <%= pie_chart(@totals, library: {legend: {position: 'top'}}) %>
      </div>
      <div class="col-md-8">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Title</th>
              <th>Issue Type</th>
              <th>Hours</th>
            </tr>
          </thead>
          <tbody>
            
            <%= render partial: "reports/ticket", collection: @tickets %>

          </tbody>
        </table>
      </div>
    </div>
  </div>

<% else %>

    <div class="container">
      <div class="row">
        <h3 class='text-center'>No Data :(</h3>
        
      </div>
    </div>

<% end %>
